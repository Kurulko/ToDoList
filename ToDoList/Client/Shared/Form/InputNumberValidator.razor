@using System.Linq.Expressions
@typeparam TValue
@inherits InputNumber<TValue>

<InputValidator Disabled="Disabled" For="For">
    <InputNumber @attributes="AdditionalAttributes" class="form-control" Value="@Value" 
        ValueChanged="@ValueChanged" ValueExpression="@ValueExpression" disabled="@Disabled"/>
</InputValidator>

@code {
    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public Expression<Func<TValue>> For { get; set; }
}

