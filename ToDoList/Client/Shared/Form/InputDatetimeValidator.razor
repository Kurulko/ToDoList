@using System.Linq.Expressions
@inherits InputDate<DateTime>

<InputValidator Disabled="Disabled" For="For">
    <InputDate step="any" Type="@InputDateType.DateTimeLocal" @attributes="AdditionalAttributes" class="form-control"
        Value="@Value" ValueChanged="@ValueChanged" ValueExpression="@ValueExpression"/>
</InputValidator>

@code {
    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public Expression<Func<DateTime>> For { get; set; }
}
