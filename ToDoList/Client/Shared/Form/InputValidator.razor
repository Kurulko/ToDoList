@typeparam TValue
@using System.Linq.Expressions

<DisplayName For="For"/>
@ChildContent
@if(!Disabled)
{
    <ValidationMessage For="For"/>
}

@code {
    [Parameter]
    public RenderFragment ChildContent {get;set;}
  
    [Parameter]
    public bool Disabled {get;set;}

    [Parameter]
    public Expression<Func<TValue>> For {get;set;}
}
