@using System.Linq.Expressions
@inherits InputCheckbox

<InputValidator Disabled="Disabled" For="For">
    <InputCheckbox @attributes="AdditionalAttributes" Value="@Value" class="form-check-input"
        ValueChanged="@ValueChanged" ValueExpression="@ValueExpression" disabled="@Disabled"/>
</InputValidator>

@code {
    [Parameter]
    public bool Disabled {get;set;}

    [Parameter]
    public Expression<Func<bool>> For {get;set;}
}
